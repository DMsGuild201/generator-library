    "changes": "Translation into Campaign Logger generator format."
  },
  "genre": "",
  "categories": [
    ""
  ],
  "tables": [
    {
      "name": "init",
      "explanation": "Initializing the required global variables, if any.",
      "entries": [
        {
          "v": "",
          "export": {
            "site": "{site}"
          }
        }
      ]
    },
    {
      "**************************************************": "OUTPUT VARIANTS"
    },
    {
      "name": "result",
      "explanation": "The output format.",
      "entries": [
        "{section}"
      ]
    },
    {
      "name": "word",
      "explanation": "One-word output.",
      "entries": [
        "{g:site}"
      ]
    },
    {
      "name": "summary",
      "explanation": "Brief output.",
      "entries": [
        "{attribute} {g:site}"
      ]
    },
    {
      "name": "detail",
      "explanation": "More detailed output variations.",
      "entries": [
        "{g:site} {feature}. {obstacle}.",
        "{attribute} {g:site} {feature}. {obstacle}."
      ]
    },
    {
      "name": "description",
      "explanation": "Long description as a sentence.",
      "entries": [
        "{inhabitant}. {obstacle}. {reward}."
      ]
    },
    {
      "name": "section",
      "explanation": "Long description as a subheading and a text paragraph.",
      "entries": [
        "{init}===== {random} =====\r\n{description} \r\n "
      ]
    },
    {
      "name": "stats",
      "explanation": "Details as statistics.",
      "entries": [
        "{b|Name}: {random} \r\n{b|Obstacle}: {obstacle}. \r\n{b|Inhabitant}: {inhabitant} \r\n{b|Reward}: {reward} \r\n{b|Attribute}: {attribute} \r\n{b|Feature}: {feature} "
      ]
    },
    {
      "name": "meta",
      "explanation": "Off-game explanation of the result.",
      "entries": [
        ""
      ]
    },
    {
      "**************************************************": "TYPES"
    },
    {
      "name": "site",
      "explanation": "Types by rarity.",
      "entries": [
        {
          "m": 10,
          "v": "{common}"
        },
        "{rare}"
      ]
    },
    {
      "name": "common",
      "explanation": "Usual types.",
      "entries": [
        "{lib:place#subpolar}"
      ]
    },
    {
      "name": "rare",
      "explanation": "Unusual types.",
