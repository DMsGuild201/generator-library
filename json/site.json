    "changes": "Translation into Campaign Logger generator format."
  },
  "genre": "",
  "categories": [
    ""
  ],
  "tables": [
    {
      "name": "init",
      "explanation": "Initializing the required global variables, if any.",
      "entries": [
        {
          "v": "",
          "export": {
            "site": "{site}"
          }
        }
      ]
    },
    {
      "**************************************************": "OUTPUT VARIANTS"
    },
    {
      "name": "result",
      "explanation": "The output format.",
      "entries": [
        "{section}"
      ]
    },
    {
      "name": "word",
      "explanation": "One-word output.",
      "entries": [
        "{g:site}"
      ]
    },
    {
      "name": "summary",
      "explanation": "Brief output.",
      "entries": [
        "{attribute} {g:site}"
      ]
    },
    {
      "name": "detail",
      "explanation": "More detailed output variations.",
      "entries": [
        "{g:site} {complication}, {feature}",
        "{attribute} {g:site} {complication}, {feature}"
      ]
    },
    {
      "name": "description",
      "explanation": "Long description as a sentence.",
      "entries": [
        "The {g:milieu} {complication} and {inhabited} {denizen attribute} {denizen}. The {synonym} {hides} {reward attribute} {reward}."
      ]
    },
    {
      "name": "section",
      "explanation": "Long description as a subheading and a text paragraph.",
      "entries": [
        "===== {random} =====\r\n{description} \r\n "
      ]
    },
    {
      "name": "stats",
      "explanation": "Details as statistics.",
      "entries": [
        "{b|Name}: {random} \r\n{b|Complication}: {complication} \r\n{b|Denizen}: {denizen attribute} {denizen} \r\n{b|Reward}: {reward attribute} {reward} \r\n{b|Attribute}: {attribute} \r\n{b|Feature}: {feature} "
      ]
    },
    {
      "name": "meta",
      "explanation": "Off-game explanation of the result.",
      "entries": [
        ""
      ]
    },
