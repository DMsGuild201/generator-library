    "business": ""
  },
  "variables": {
    "footnote": ""
  },
  "explanation": "Stores, boutiques and emporiums.",
  "structure": "Produces entries for different types of genres and worlds. The 'common' and 'rare' tables are generic and should be compatible with almost any world. To retain compatibility with most settings, the  non-generic tables should be called only from other tables by specifying their name directly.",
  "note": "",
  "format": "",
  "bugs": "",
  "to do": "",
  "see": "business, district",
  "date": "2018-09-10",
  "authors": "ELF Vesala.",
  "sources": "",
  "attribution": {
    "creators": "",
    "copyright": "",
    "licence": "https://",
    "disclaimer": "https://",
    "source": "",
    "changes": "Translation into Campaign Logger generator format."
  },
  "genre": "universal",
  "categories": [
    "world"
  ],
  "tables": [
    {
      "name": "init",
      "explanation": "Initializing the required global variables, if any.",
      "entries": [
        {
          "v": "",
          "export": {
            "": ""
          }
        }
      ]
    },
    {
      "**************************************************": "OUTPUT VARIANTS"
    },
    {
      "name": "result",
      "explanation": "The output format.",
      "entries": [
        "{word}",
        "{summary}",
        "{detail}"
      ]
    },
    {
      "name": "word",
      "explanation": "One-word output.",
      "entries": [
        "{class}"
      ]
    },
    {
      "name": "summary",
      "explanation": "Brief output.",
      "entries": [
        "{shop}"
      ]
    },
    {
      "name": "detail",
      "explanation": "More detailed output variations.",
      "entries": [
        "{attribute} '{shop}' [selling {g:business} {g:commodity}]",
        "'{shop}' [selling {g:business} {g:commodity}] that is {feature}",
        "{attribute} '{shop}' [selling {g:business} {g:commodity}] that is {feature}"
      ]
    },
    {
      "name": "description",
      "explanation": "Long description as a paragraph of text.",
      "entries": [
        "The '{shop}' operates from {premises}. The place has {selection}, the prices are {pricing} and the staff {staff}."
      ]
    },
    {
      "name": "stats",
      "explanation": "Details as statistics.",
      "entries": [
        "{b|Name}: {shop} \r\n{b|Line of Business}: {g:business} {g:commodity} \r\n{b|Premises}: {premises} \r\n{b|Selection}: {selection} \r\n{b|Pricing}: {pricing} \r\n{b|Staff}: {staff} \r\n{b|Attribute}: {attribute} \r\n{b|Feature}: {feature} "
      ]
    },
    {
      "**************************************************": "TYPES"
    },
    {
      "name": "shop",
      "explanation": "Types by rarity.",
      "entries": [
        {
          "m": 10,
          "v": "{|{common}|scase}"
        },
        "{|{rare}|scase}"
      ]
    },
    {
      "name": "common",
      "explanation": "Usual types.",
      "entries": [
        "{commodity} {class}",
        "{title} {commodity} {class}",
        "{lib:name-random#summary}'s {commodity}",
        "{lib:name-random#summary}'s {title} {commodity}",
        "{lib:name-random#summary}'s {commodity} {class}",
        "{lib:name-random#summary}'s {title} {commodity} {class}"
      ]
    },
    {
      "name": "rare",
      "explanation": "Unusual types.",
      "entries": [
